<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 
他のオブジェクト参照は、set系列メソッド号出と同じ
*Ctrl+Space時、自動提案される 
-->
 
	<bean id="player1" class="com.test.diEx06.Player">
		<constructor-arg value="ダルビッシュ有"/>
		<constructor-arg value="28"/>
		
		<constructor-arg>
			<list>
				<value>4番</value>
				<value>1塁手</value>
			</list>
		</constructor-arg>
		
		<property name="height">
			<value>188</value>
		</property>
		
		<property name="weight" value="80"/>
	</bean>

	<bean id="playerInfo1" class="com.test.diEx06.PlayerInfo">
		<property name="player"> <!-- PlayerInfoのsetPlayerメソッド-->
			<ref bean="player1"></ref>
		</property>
	</bean>
	
</beans>